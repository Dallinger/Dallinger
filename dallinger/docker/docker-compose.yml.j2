version: '3.7'
services:
  postgresql:
    image: postgres:12
    environment:
      POSTGRES_USER: dallinger
      POSTGRES_PASSWORD: dallinger
      POSTGRES_DB: dallinger
    volumes:
      - dallinger_pg_data:/var/lib/postgresql/data
    ports:
      # bots might need to communicate with postgresql
      - "5432:5432"
  redis:
    image: redis
    command: redis-server --appendonly yes
    volumes:
      - dallinger_redis_data:/data
      # bots might need to communicate with redis
    ports:
      - "6379:6379"
  worker:
    image: {{ experiment_name }}-worker
    user: "${UID}:${GID}"
    build: 
      context: .
      dockerfile: ./Dockerfile.worker
{%- if needs_chrome %}
    cap_add:
        - SYS_ADMIN
{%- endif %}
    volumes:
      - "/dev/shm:/dev/shm"
{%- for volumestr in volumes %}
      - "{{ volumestr }}"
{%- endfor %}
    environment: &commonenv
      HOST: web # Tell the worker where we expect the web service to be
      REDIS_URL: redis://redis:6379
      DATABASE_URL: postgresql://dallinger:dallinger@postgresql/dallinger
      FLASK_SECRET_KEY: "${FLASK_SECRET_KEY}"
      DISPLAY: novnc:0.0
      HOME: /tmp
  web:
    image: {{ experiment_name }}-web
    user: "${UID}:${GID}"
    build: 
      context: .
      dockerfile: ./Dockerfile.web
{%- if needs_chrome %}
    cap_add: # Is it really necessary?
        - SYS_ADMIN # Or only needed for the `worker` container?
{%- endif %}
    volumes:
      - "/dev/shm:/dev/shm"
{%- for volumestr in volumes %}
      - "{{ volumestr }}"
{%- endfor %}
    environment:
      <<: *commonenv
      PORT: 5000
    ports:
      - "5000:5000"
{%- if needs_chrome %}
  novnc:
    image: theasp/novnc:latest
    environment:
      - RUN_XTERM=no
    ports:
      - "8080:8080"
{%- endif %}

volumes:
  dallinger_pg_data:
  dallinger_redis_data: